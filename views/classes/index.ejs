<main class="container">
    <div class="page-splash-classes">
      <%# <img src="https://i.imgur.com/9wP1BQv.jpg" alt="woman doing yoga"> %>
      <div class="container is-half has-text-centered pageSplash">
        <h1 class="title has-text-white has-text-centered is-size-1">Our classes</h1>
      </div>
    </div>


</section>

<div class="columns is-multiline">
  <% klasses.forEach(klass => { %>
    <div class="column is-one-third-desktop is-half-tablet">
    <a href="/classes/<%= klass._id %>">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="<%= klass.image%>" alt="<%=klass.name %>">
          </figure>
        </div>
        <div class="card-content">
            <div class="content">
              <h4 class="title is-4">
              <a href="/classes/<%= klass._id %>">
              <%=klass.name%>
              </a>
              </h4>
              <h4 class="subtitle is-6"><%= klass.venue %></h4>
              <h4 class="subtitle is-6"><%= klass.time %></h4>
              <h6 class="subtitle is-6">Â£<%= klass.price%></h6>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</main>
